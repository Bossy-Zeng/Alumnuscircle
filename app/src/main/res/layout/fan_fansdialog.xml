<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@drawable/fan_fansdialog_shape"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:background="@color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@color/transparent">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/fan_fansdialog_hdimg_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    fresco:backgroundImage="@color/transparent"
                    fresco:roundBottomLeft="false"
                    fresco:roundBottomRight="false"
                    fresco:roundTopLeft="true"
                    fresco:roundTopRight="true"
                    fresco:roundedCornerRadius="10dp" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/fan_fansdialog_hdimg_bg_mask"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.5"
                    fresco:actualImageScaleType="fitXY"
                    fresco:backgroundImage="@color/transparent"
                    fresco:roundBottomLeft="false"
                    fresco:roundBottomRight="false"
                    fresco:roundTopLeft="true"
                    fresco:roundTopRight="true"
                    fresco:roundedCornerRadius="10dp" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="bottom|center_horizontal"
                android:background="@color/white"
                android:gravity="bottom|center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/fan_fansdialog_circlename_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:hint="@string/fan_fansdialog_circlename"
                    android:textColor="@color/fontBlack"
                    android:textColorHint="@color/fontBlack"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:background="@color/transparent"
                    android:gravity="bottom|center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fan_fansdialog_memberinfo_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:hint="@string/fan_fansdialog_creator"
                        android:textColor="@color/fontBlack"
                        android:textColorHint="@color/fontBlack"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|left"
                        android:layout_marginLeft="3dp"
                        android:background="@color/transparent"
                        android:gravity="top|left">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:background="@color/transparent"
                            android:scaleType="centerInside"
                            android:src="@mipmap/fan_fansdialog_hat" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/fan_fansdialog_hdimg"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="115dp"
            fresco:actualImageScaleType="centerInside"
            fresco:backgroundImage="@color/transparent"
            fresco:roundAsCircle="true" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fan_fansdialog_shape"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:src="@color/grey" />

        <TextView
            android:id="@+id/fan_fansdialog_intro_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/transparent"
            android:hint="@string/fan_fansdialog_intro"
            android:textColor="@color/fontBlack"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/transparent"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/fan_fansdialog_connectus_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/fan_fansdialog_btn_shape"
                android:text="@string/fan_fansdialog_connectus"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/fan_fansdialog_applyjoin_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/fan_fansdialog_btn_shape"
                android:text="@string/fan_fansdialog_applyjoin"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
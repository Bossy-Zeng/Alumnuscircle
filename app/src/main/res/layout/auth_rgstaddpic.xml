<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/auth_background">
    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="@mipmap/auth_background">-->

    <!--</LinearLayout>-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/auth_rgstaddpic_tlb">

        </include>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:text="选择上传您的照片"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="25sp"
                    android:paddingTop="5dp"
                    android:textColor="@color/white"
                    android:text="建议您使用真实图片"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <FrameLayout
                android:id="@+id/auth_rgstaddpic_pic_fly"
                android:layout_width="120dp"
                android:layout_height="120dp">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/auth_register_pic_bgd"
                    fresco:actualImageScaleType="centerInside"
                    fresco:roundAsCircle="true"
                    android:id="@+id/auth_rgstaddpic_headImg"/>


            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:background="@color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/auth_rgstaddpic_ensure_btn_btn"
                    android:textColor="@color/white"
                    android:text="完成"
                    android:layout_width="0dp"
                    android:layout_weight="16.75"
                    android:layout_height="40dp"
                    android:background="@drawable/login_button_sele"/>
                <ImageView
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>

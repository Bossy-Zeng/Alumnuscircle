<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f9"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbarWhite">
        <TextView
            android:id="@+id/createcc_createinfo_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="上一步"
            android:textColor="@color/fontBlack"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/createcc_createinfo_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:focusable="false"
            android:text="完成"
            android:textColor="@color/fontBlack"
            android:textSize="18sp" />
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DFDFDF" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f9">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f5f5f9"
            android:orientation="vertical">

            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0dp"-->
            <!--android:layout_weight="0.5">-->
            <!-- -->
            <!--</LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#f5f5f9">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:src="@color/transparent"
                    android:scaleType="fitXY"
                    android:background="@color/transparent"/>
                <TextView
                    android:id="@+id/createcc_createinfo_circletv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="房地产买卖交流圈"
                    android:textAlignment="center"
                    android:textColor="@color/fontBlack"
                    android:textSize="26sp"
                    android:background="@color/transparent"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:src="@color/transparent"
                    android:scaleType="fitXY"
                    android:background="@color/transparent"/>

                <TextView
                    android:id="@+id/createcc_createinfo_simsun0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="请确认圈子的基本设置"
                    android:textAlignment="center"
                    android:textColor="#666666"
                    android:textSize="17sp"
                    android:background="@color/transparent"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:src="@color/transparent"
                    android:scaleType="fitXY"
                    android:background="@color/transparent"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FBFBFF"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DFDFDF" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:src="@color/transparent"
                    android:scaleType="fitXY"
                    android:background="@color/transparent"/>

                <TextView
                    android:id="@+id/createcc_createinfo_simsun1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:gravity="left|center_vertical"
                    android:text="创建圈子理由"
                    android:textColor="@color/fontBlack"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:src="@color/transparent"
                    android:scaleType="fitXY"
                    android:background="@color/transparent"/>

                <EditText
                    android:id="@+id/createcc_createinfo_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="left|top"
                    android:hint="在此处填写您创建该圈子的理由"
                    android:minLines="4"
                    android:textColor="@color/deepGrey"
                    android:textColorHint="@color/deepGrey"
                    android:textSize="17sp"
                    android:background="@color/transparent"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:src="@color/transparent"
                    android:scaleType="fitXY"
                    android:background="@color/transparent"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DFDFDF" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:src="@color/transparent"
                android:scaleType="fitXY"
                android:background="@color/transparent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FBFBFF"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DFDFDF" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:src="@color/transparent"
                    android:scaleType="fitXY"
                    android:background="@color/transparent"/>

                <TextView
                    android:id="@+id/createcc_createinfo_simsun2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:singleLine="true"
                    android:text="圈子介绍"
                    android:textColor="@color/fontBlack"
                    android:textSize="17sp"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:src="@color/transparent"
                    android:scaleType="fitXY"
                    android:background="@color/transparent"/>

                <EditText
                    android:id="@+id/createcc_createinfo_introduce"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="left|top"
                    android:hint="在此处填写您对该圈子的介绍"
                    android:minLines="4"
                    android:textColor="@color/deepGrey"
                    android:textColorHint="@color/deepGrey"
                    android:textSize="17sp"
                    android:background="@color/transparent"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:src="@color/transparent"
                    android:scaleType="fitXY"
                    android:background="@color/transparent"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DFDFDF" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:src="@color/transparent"
                android:scaleType="fitXY"
                android:background="@color/transparent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FBFBFF"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DFDFDF" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:src="@color/transparent"
                    android:scaleType="fitXY"
                    android:background="@color/transparent"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/createcc_createinfo_simsun3"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:singleLine="true"
                            android:text="设置圈子所在的分类"
                            android:textColor="@color/fontBlack"
                            android:textSize="17sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/createcc_createinfo_selected"
                            android:textColor="@color/deepGrey"
                            android:textSize="17sp"
                            android:background="@color/transparent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:singleLine="true"
                            android:text="社团圈"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <Spinner
                        android:layout_gravity="right|center_vertical"
                        android:id="@+id/createcc_createinfo_selectcc"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:entries="@array/circle"></Spinner>
                </LinearLayout>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:src="@color/transparent"
                    android:scaleType="fitXY"
                    android:background="@color/transparent"/>



                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:src="@color/transparent"
                    android:scaleType="fitXY"
                    android:background="@color/transparent"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#DFDFDF" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
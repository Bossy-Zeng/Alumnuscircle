<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/auth_background">

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1">

           </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="1">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/auth_login_hat"/>
                    <TextView
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="校友圈"/>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8">
            <LinearLayout
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:background="@color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </ImageView>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="16.75"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:paddingTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:paddingTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/auth_login_user"/>
                        <EditText
                            android:background="@null"
                            android:paddingLeft="15dp"
                            android:id="@+id/auth_login_user_tv"
                            android:layout_gravity="top"
                            android:layout_width="300dp"
                            android:layout_height="40dp"
                            android:textColor="#FFFFFF"
                            android:hint="输入您的账号"/>
                    </LinearLayout>
                    <ImageView
                        android:background="@color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="2dp" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/white"/>


                </LinearLayout>
                <ImageView
                    android:background="@color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </ImageView>

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:background="@color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </ImageView>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="16.75"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:paddingTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:paddingTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/auth_login_pwd"/>
                        <EditText
                            android:background="@null"
                            android:paddingLeft="15dp"
                            android:inputType="textPassword"
                            android:id="@+id/auth_login_pwd_tv"
                            android:layout_gravity="top"
                            android:layout_width="300dp"
                            android:layout_height="40dp"
                            android:textColor="#FFFFFF"
                            android:hint="输入您的密码"/>
                    </LinearLayout>
                    <ImageView
                        android:background="@color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="2dp" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/white"/>


                </LinearLayout>
                <ImageView
                    android:background="@color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </ImageView>

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1.2"
                android:paddingTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:background="@color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </ImageView>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="16.75"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:gravity="center"
                        android:paddingTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/auth_login_login_btn"
                            android:textColor="@color/white"
                            android:text="登录"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="@drawable/login_button_sele"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:paddingTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/auth_login_register_tv"
                            android:layout_alignParentLeft="true"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="注册新用户"/>
                        <!--<TextView-->
                            <!--android:gravity="right"-->
                            <!--android:id="@+id/auth_login_forgetpwd_tv"-->
                            <!--android:layout_alignParentRight="true"-->
                            <!--android:layout_width="120dp"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:textColor="@color/white"-->
                            <!--android:text="忘记密码？"/>-->
                    </RelativeLayout>



                </LinearLayout>
                <ImageView
                    android:background="@color/transparent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                </ImageView>

            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </LinearLayout>

    </LinearLayout>

</FrameLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.alumnuscircle.connections.Image.CircleNetworkImage
        android:id="@+id/ccdtl_detailitem_user"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="26dp"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        >
      <TextView
          android:id="@+id/ccdtl_detailitem_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="20dp"
          android:textColor="#333333"
          android:text="赵小雨"
          />
        <TextView
            android:id="@+id/ccdtl_detailitem_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="19dp"
            android:text="小时前"
            android:textColor="#999999"
            />
    </LinearLayout>
</LinearLayout>
    <ImageView
        android:id="@+id/ccdtl_detailitem_articleimg"
        android:layout_width="match_parent"
        android:layout_height="266dp"
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        />
    <TextView
    android:id="@+id/ccdtl_detailitem_title"
    android:textAlignment="center"
    android:layout_margin="15dp"
    android:layout_width="match_parent"
        android:text="google"
  android:textSize="23dp"
        android:textColor="#333333"
        android:layout_height="wrap_content"
        />
    <TextView

        android:id="@+id/ccdtl_detailitem_text"

        android:textSize="14dp"
        android:textColor="#666666"
        android:text="aaaaaaaaaaaaaaaaaaaaaa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </LinearLayout>
</LinearLayout>